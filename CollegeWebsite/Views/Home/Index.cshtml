        <script>
            $(document).ready(function () {
                $('#contact').submit(function (e) {
                    e.preventDefault();

                    if (!$(this).valid()) return;

                    $.ajax({
                        type: 'POST',
                        url: '/Home/SubmitFeedback',
                        data: $(this).serialize(),
                        success: function (response) {
                            if (response.success) {
