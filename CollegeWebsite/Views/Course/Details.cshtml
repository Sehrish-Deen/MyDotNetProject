@model CollegeWebsite.Models.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<br />

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt class="col-sm-2">
            Course Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>

        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="~/images/@Model.ImagePath" alt="Course Image" style="width:100px; height:100px;" />
            }
            else
            {
                <span>No image uploaded.</span>
            }
        </dd>

        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @(Model.Department?.DepartmentName ?? "No Department Assigned")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId" style="color: #a12c2f;">Edit</a> |
    <a asp-action="ShowCourses" style="color: #a12c2f;">Back to List</a>
</div>
