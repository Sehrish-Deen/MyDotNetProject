@model CollegeWebsite.Models.Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<br />
<h3>Are you sure you want to delete this course?</h3>
<div>
    <h4>@Model.CourseName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.CourseDescription</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department.DepartmentName</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="~/images/@Model.ImagePath" width="100" />
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="ShowCourses">Cancel</a>
</form>
