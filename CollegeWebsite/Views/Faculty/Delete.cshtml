@model CollegeWebsite.Models.Faculty

@{
    ViewData["Title"] = "Delete Faculty";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<br />
<h3>Are you sure you want to delete this faculty member?</h3>
<div>
    <h4>@Model.FacultyName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Qualification</dt>
        <dd class="col-sm-10">@Model.Qualification</dd>

        <dt class="col-sm-2">Designation</dt>
        <dd class="col-sm-10">@Model.Designation</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.DepartmentName</dd>

        <dt class="col-sm-2">Photo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="~/facultyImages/@Model.Photo" width="100" />
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="FacultyId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="ShowFaculties">Cancel</a>
</form>
