@model CollegeWebsite.Models.FacultyViewModel

@{
    ViewData["Title"] = "Edit Faculty";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<br />

<h1>Edit Faculty</h1>
<hr />

<p style="color:red;">@TempData["Size_error"]</p>
<p style="color:red;">@TempData["Ext_error"]</p>

<div class="row">
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input asp-for="FacultyId" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="FacultyName" class="form-control" id="facultyName" />
                    <label for="facultyName">Faculty Name</label>
                    <span asp-validation-for="FacultyName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Qualification" class="form-control" id="qualification" />
                    <label for="qualification">Qualification</label>
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Designation" class="form-control" id="designation" />
                    <label for="designation">Designation</label>
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="email" />
                    <label for="email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Phone" class="form-control" id="phone" />
                    <label for="phone">Phone</label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="DepartmentId" asp-items="@(new SelectList(Model.Departments, "DepartmentId", "DepartmentName"))" class="form-select" id="floatingDepartment">
                        <option value="">-- Select Department --</option>
                    </select>
                    <label for="departmentSelect">Department</label>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Photo" type="file" class="form-control" id="facultyPhoto" />
                    <label for="facultyPhoto">Choose Photo</label>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                @if (ViewBag.ExistingPhoto != null)
                {
                    <div class="mb-3">
                        <label>Existing Photo:</label><br />
                        <img src="~/facultyImages/@ViewBag.ExistingPhoto" style="width:100px; height:100px;" />
                    </div>
                }

                <div class="form-group">
                    <input type="submit" value="Update Faculty" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="ShowFaculties" style="color: #a12c2f;">Back to List</a>
</div>
