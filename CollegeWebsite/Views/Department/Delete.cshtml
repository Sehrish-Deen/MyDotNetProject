@model CollegeWebsite.Models.Department

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<br />
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>

        <dd class="col-sm-10">
            <img src="~/images/@Html.DisplayFor(model => model.ImagePath) " style="width:100px; height:100px;" />

        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DepartmentId" />
        <input type="submit" value="Delete" style="background-color: #a12c2f;" class="btn btn-danger" /> |
        <a asp-action="Index" style="color: #a12c2f;">Back to List</a>
    </form>
</div>

