@model CollegeWebsite.Models.DepartmentViewModel

@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid position-relative d-flex p-0" style="min-height: 100vh;">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-11 col-md-10 col-lg-10 col-xl-9">
                <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3 text-white">

                    <h3 class="text-center mb-4" style="color: #a12c2f;">Add Department</h3>

                    <p class="text-danger">@TempData["Size_error"]</p>
                    <p class="text-danger">@TempData["Ext_error"]</p>

                    <form asp-action="AddDepartment" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating border rounded p-2">
                                    <input asp-for="DepartmentName" class="form-control border-0" placeholder="Enter department name" />
                                    <label asp-for="DepartmentName">Department Name</label>
                                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating border rounded p-2">
                                    <textarea asp-for="Description" class="form-control border-0" placeholder="Enter description" style="height: 150px;"></textarea>
                                    <label asp-for="Description">Description</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="ImagePath" type="file" class="form-control" id="floatingImage" />
                                <label for="floatingImage" style="color: #000;">Department Image</label>
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-outline-warning w-50 py-3" style="color: white;">Add Department</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Index" style="color: #a12c2f;">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
